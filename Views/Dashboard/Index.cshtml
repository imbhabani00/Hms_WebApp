@{
    ViewData["Title"] = "Dashboard";
}

<!-- Custom CSS -->
<style>
    :root {
        --primary-gradient-start: #667eea;
        --primary-gradient-end: #764ba2;
        --purple-accent: #6f42c1;
        --light-blue: #e8f4f8;
        --dark-blue: #2c3e50;
        --card-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.95), rgba(118, 75, 162, 0.95)), url('https://images.unsplash.com/photo-1631815588090-d4bfec5b1ccb?w=1200') center/cover;
        color: white;
        padding: 80px 40px;
        border-radius: 20px;
        margin-bottom: 40px;
        position: relative;
        overflow: hidden;
    }

    .hero-content h1 {
        font-size: 48px;
        font-weight: 700;
        margin-bottom: 20px;
        line-height: 1.2;
    }

    .hero-content p {
        font-size: 18px;
        opacity: 0.95;
        max-width: 600px;
        line-height: 1.6;
    }

    .hero-stats {
        display: flex;
        gap: 30px;
        margin-top: 40px;
        flex-wrap: wrap;
    }

    .hero-stat-item {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        padding: 20px 30px;
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .hero-stat-number {
        font-size: 36px;
        font-weight: 700;
        display: block;
    }

    .hero-stat-label {
        font-size: 14px;
        opacity: 0.9;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .hero-image {
        position: absolute;
        right: 40px;
        top: 50%;
        transform: translateY(-50%);
        width: 400px;
        height: 400px;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        display: none;
    }

    media (min-width: 992px) {
        .hero-image {
            display: block;
        }

        .hero-content {
            max-width: 50%;
        }
    }

    .hero-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .team-badge {
        background: white;
        padding: 15px 25px;
        border-radius: 50px;
        display: inline-flex;
        align-items: center;
        gap: 15px;
        position: absolute;
        top: 40px;
        right: 40px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

    .team-avatars {
        display: flex;
        margin-right: 10px;
    }

        .team-avatars img {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            border: 3px solid white;
            margin-left: -10px;
        }

            .team-avatars img:first-child {
                margin-left: 0;
            }

    .team-text {
        color: var(--purple-accent);
        font-weight: 600;
        font-size: 14px;
    }

    /* About Section */
    .about-section {
        background: white;
        padding: 60px 40px;
        border-radius: 20px;
        margin-bottom: 40px;
        box-shadow: var(--card-shadow);
    }

    .about-header {
        color: var(--purple-accent);
        font-size: 14px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 10px;
    }

    .about-title {
        font-size: 36px;
        font-weight: 700;
        color: var(--dark-blue);
        margin-bottom: 20px;
        max-width: 500px;
    }

    .about-description {
        color: #6c757d;
        line-height: 1.8;
        max-width: 600px;
    }

    .about-image {
        width: 100%;
        height: 300px;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 40px rgba(111, 66, 193, 0.2);
    }

        .about-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    /* Statistics Cards Section */
    .stats-section {
        background: white;
        padding: 40px;
        border-radius: 20px;
        margin-bottom: 40px;
        box-shadow: var(--card-shadow);
    }

    .section-title {
        font-size: 28px;
        font-weight: 700;
        color: var(--dark-blue);
        margin-bottom: 30px;
        text-align: center;
    }

    .stat-card {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
        border-radius: 15px;
        padding: 25px;
        margin-bottom: 20px;
        border: 2px solid rgba(111, 66, 193, 0.1);
        transition: all 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(111, 66, 193, 0.15);
            border-color: var(--purple-accent);
        }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
        background: linear-gradient(135deg, var(--primary-gradient-start), var(--primary-gradient-end));
        color: white;
        margin-bottom: 15px;
    }

    .stat-number {
        font-size: 32px;
        font-weight: 700;
        color: var(--purple-accent);
        margin: 10px 0;
    }

    .stat-label {
        color: #6c757d;
        font-size: 14px;
        font-weight: 500;
    }

    /* Departments Section */
    .departments-section {
        background: white;
        padding: 60px 40px;
        border-radius: 20px;
        margin-bottom: 40px;
        box-shadow: var(--card-shadow);
    }

    .departments-header {
        color: var(--purple-accent);
        font-size: 14px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 2px;
        text-align: center;
        margin-bottom: 10px;
    }

    .departments-title {
        font-size: 36px;
        font-weight: 700;
        color: var(--dark-blue);
        text-align: center;
        margin-bottom: 50px;
    }

    .department-card {
        background: white;
        border: 2px solid #e9ecef;
        border-radius: 15px;
        padding: 30px 20px;
        text-align: center;
        transition: all 0.3s ease;
        height: 100%;
        cursor: pointer;
    }

        .department-card:hover {
            border-color: var(--purple-accent);
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(111, 66, 193, 0.15);
        }

        .department-card.active {
            background: linear-gradient(135deg, var(--primary-gradient-start), var(--primary-gradient-end));
            border-color: var(--purple-accent);
            color: white;
        }

    .department-icon {
        width: 70px;
        height: 70px;
        margin: 0 auto 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 36px;
        border-radius: 12px;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
        color: var(--purple-accent);
    }

    .department-card.active .department-icon {
        background: rgba(255, 255, 255, 0.2);
        color: white;
    }

    .department-name {
        font-size: 16px;
        font-weight: 600;
        color: var(--dark-blue);
        margin-bottom: 5px;
    }

    .department-card.active .department-name {
        color: white;
    }

    .department-subtitle {
        font-size: 13px;
        color: #6c757d;
    }

    .department-card.active .department-subtitle {
        color: rgba(255, 255, 255, 0.9);
    }

    /* Charts Section */
    .charts-section {
        margin-bottom: 40px;
    }

    .chart-container {
        background: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: var(--card-shadow);
        margin-bottom: 30px;
        min-height: 400px;
    }

    .chart-title {
        font-size: 20px;
        font-weight: 700;
        color: var(--dark-blue);
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 3px solid var(--purple-accent);
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .chart-icon {
        color: var(--purple-accent);
    }
</style>

<div class="modal fade" id="myModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Loading...</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4" id="myModalContent">
                <!-- AJAX content loads here -->
            </div>
        </div>
    </div>
</div>

<div class="col-md-4 mt-2 mb-2 mt-md-0" style="margin-left: 26px; border-radius: 11px;">
    <a class="btn btn-primary btn-lg shadow-lg px-4"
       onclick="LoadPopUp('Modallg','@Url.Action("AddDashboardDetails", "Dashboard")')">
        <i class="fas fa-plus me-2"></i>
        Add
    </a>
</div>

<div class="container-fluid px-4">
