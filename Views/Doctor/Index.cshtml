@{
    ViewData["Title"] = "Doctors";
}

<!-- Universal Modal -->
<div class="modal fade" id="myModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Loading...</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-3" id="myModalContent">
                <!-- AJAX content loads here -->
            </div>
        </div>
    </div>
</div>

<div class="container-fluid px-4 py-3">
    <!-- Single Line Header Card -->
    <div class="card shadow-sm mb-3">
        <div class="card-body p-3">
            <div class="d-flex align-items-center gap-3 flex-wrap">
                <!-- Title Section -->
                <div class="d-flex align-items-center" style="min-width: 220px;">
                    <div class="bg-primary text-white rounded-circle p-2 me-2 shadow"
                         style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <div>
                        <h6 class="mb-0 fw-bold text-dark">Doctors</h6>
                        <small class="text-muted">Manage records</small>
                    </div>
                </div>

                <!-- Search Bar -->
                <div class="flex-grow-1" style="min-width: 250px; max-width: 400px;">
                    <div class="position-relative">
                        <i class="fas fa-search text-muted position-absolute start-0 top-50 translate-middle-y ms-3"
                           style="font-size: 12px;"></i>
                        <input type="text" id="doctorSearch" class="form-control form-control-sm ps-5"
                               style="height: 38px; padding-left: 40px !important; font-size: 14px;"
                               placeholder="Search doctors...">
                    </div>
                </div>

                <!-- Items Per Page -->
                <div style="width: 90px;">
                    <select id="ItemsPerPageDoctorList" class="form-select form-select-sm"
                            style="height: 38px; font-size: 13px;">
                        <option value="10">10</option>
                        <option value="25" selected>25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                    <input type="hidden" id="hdn_DoctorPage" value="1" />
                </div>

                <!-- Schedule Button -->
                <div style="width: 160px;">
                    <a href="/Doctor/Add" class="btn btn-primary btn-sm w-100 d-flex align-items-center justify-content-center gap-1"
                       style="height: 38px; font-size: 13px; font-weight: 500;">
                        <i class="fas fa-plus"></i>
                        <span>Doctor</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Doctors List Card -->
    <div class="card shadow-sm">
        <div class="card-header bg-light border-bottom py-3">
            <div class="d-flex align-items-center justify-content-between">
                <h6 class="mb-0 fw-bold text-dark">
                    <i class="fas fa-list me-2 text-primary"></i>All Doctors
                </h6>
                <span class="badge bg-primary rounded-pill px-3 py-1" style="font-size: 12px;">Loading...</span>
            </div>
        </div>
        <div class="card-body p-0">
            <div id="doctorListDiv" style="min-height: 450px;">
                <!-- Loading State -->
                <div class="d-flex flex-column align-items-center justify-content-center py-5">
                    <div class="spinner-border text-primary mb-3" style="width: 3rem; height: 3rem;">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <h6 class="text-muted mb-1">Loading doctors...</h6>
                    <small class="text-muted">Please wait while we fetch the records</small>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/doctor/index.js"></script>

<style>
    /* Ensure consistent sizing across all controls */
    .form-control-sm, .form-select-sm, .btn-sm {
        font-size: 13px !important;
    }

    /* Responsive adjustments */
    media (max-width: 992px) {
        .d-flex.gap-3.flex-wrap > div {
            margin-bottom: 8px;
        }
    }

    media (max-width: 768px) {
        .d-flex.gap-3.flex-wrap {
            flex-direction: column;
            align-items: stretch !important;
        }

            .d-flex.gap-3.flex-wrap > div {
                width: 100% !important;
                max-width: 100% !important;
                min-width: 100% !important;
            }
    }

    /* Hover effects */
    .btn-primary:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        transition: all 0.2s ease;
    }

    .form-control:focus, .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.15);
    }

    /* Table header styling when data loads */
    .table thead th {
        background-color: #f8f9fa;
        font-weight: 600;
        font-size: 13px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #495057;
        border-bottom: 2px solid #dee2e6;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
        transition: background-color 0.2s ease;
    }

    /* Badge animation */
    .badge {
        animation: pulse 2s ease-in-out infinite;
    }

    keyframes pulse {
        0%, 100% {
            opacity: 1;
        }

        50% {
            opacity: 0.7;
        }
    }
</style>