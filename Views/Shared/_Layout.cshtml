    <style>
        .user-dropdown {
            border: none;
            border-radius: 12px;
            padding: 0;
            margin-top: 8px;
        }

            .user-dropdown .dropdown-item {
                padding: 10px 20px;
                transition: all 0.2s ease;
                font-size: 14px;
            }

                .user-dropdown .dropdown-item:hover {
                    background-color: #f8f9fa;
                    padding-left: 24px;
                }

                .user-dropdown .dropdown-item i {
                    width: 20px;
                    font-size: 14px;
                }

            .user-dropdown .text-danger:hover {
                background-color: #fff5f5;
            }

        .user-profile-btn {
            display: flex;
            align-items: center;
            background: transparent;
            border: none;
            padding: 6px 12px;
            border-radius: 8px;
            transition: all 0.2s ease;
        }

            .user-profile-btn:hover {
                background-color: rgba(0, 0, 0, 0.05);
            }

        .user-avatar {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            object-fit: cover;
        }


        /* User profile display - two lines */
        .user-info {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

        .user-name {
            font-weight: 600;
            font-size: 14px;
            line-height: 1.2;
            margin-bottom: 2px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 150px;
        }

        .user-role {
            font-size: 12px;
            color: #6c757d;
            line-height: 1.2;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 150px;
        }

        /* Sidebar footer user info */
        .user-details-small {
            display: flex;
            flex-direction: column;
            gap: 2px;
        }

        .user-name-small {
            font-weight: 600;
            font-size: 13px;
            line-height: 1.2;
            color: #fff;
        }

        .user-role-small {
            font-size: 11px;
            line-height: 1.2;
            color: rgba(255, 255, 255, 0.7);
        }
    </style>
</head>

