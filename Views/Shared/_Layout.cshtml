    <!-- Scripts -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function(){
            InitializeUserProfile();

            // Sidebar Toggle
            const sidebarToggle = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('mainContent');
            const sidebarOverlay = document.getElementById('sidebarOverlay');

            sidebarToggle.addEventListener('click', function() {
                sidebar.classList.toggle('collapsed');
                mainContent.classList.toggle('expanded');

                // Mobile
                if (window.innerWidth <= 992) {
                    sidebar.classList.toggle('show-mobile');
                    sidebarOverlay.classList.toggle('show');
                }
            });

            sidebarOverlay.addEventListener('click', function() {
                sidebar.classList.remove('show-mobile');
                sidebarOverlay.classList.remove('show');
            });

            // Active Navigation
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');

            navLinks.forEach(link => {
                if (currentPath.includes(link.getAttribute('data-page'))) {
                    link.classList.add('active');
                }
            });

            // Handle window resize
            window.addEventListener('resize', function() {
                if (window.innerWidth > 992) {
                    sidebar.classList.remove('show-mobile');
                    sidebarOverlay.classList.remove('show');
                }
            });
        });

        function LoadUserProfileFromCache() {
            let userName = localStorage.getItem("cachedUserName");
            let roleName = localStorage.getItem("cachedRoleName");
            let profilePicturePath = localStorage.getItem("cachedProfilePicturePath");

            if (userName && roleName) {
                UpdateProfileUI(userName, roleName, profilePicturePath);
                return true;
            }
            return false;
        }

        function InitializeUserProfile() {
            if (!LoadUserProfileFromCache()) {
                LoadUserProfile();
            }
        }

        function ClearUserProfileCache() {
            localStorage.removeItem("cachedUserName");
            localStorage.removeItem("cachedRoleName");
            localStorage.removeItem("cachedProfilePicturePath");
            localStorage.removeItem("cachedRoleCode");
            localStorage.removeItem("cachedRoleId");
        }

        // ✅ Load user profile from API
        function LoadUserProfile() {
            $.ajax({
                url: '/UserProfile/Index',
                type: 'GET',
                data: { isFromLayout: true },
                cache: false,
                success: function (data) {
                    if (data && data.success) {
                        let userName = data.firstName + " " + data.lastName;
                        let profilePicturePath = data.profilePicturePath || '/images/default-avatar.png';
                        let roleName = data.roleName;

                        localStorage.setItem("cachedUserName", userName);
                        localStorage.setItem("cachedRoleName", roleName);
                        localStorage.setItem("cachedRoleCode", data.roleCode);
                        localStorage.setItem("cachedRoleId", data.roleId);
                        localStorage.setItem("cachedProfilePicturePath", profilePicturePath);

                        UpdateProfileUI(userName, roleName, profilePicturePath);
                    } else {
                        console.error('Failed to load user profile');
                    }
                },
                error: function () {
                    console.error('Error loading user profile');
                }
            });
        }

        function UpdateProfileUI(userName, roleName, profilePicturePath) {
            if (!profilePicturePath || profilePicturePath === '') {
                profilePicturePath = '/images/default-avatar.png';
            }

            $('.user-name, .user-name-small').text(userName);
            $('.user-role, .user-role-small').text(roleName);
            $('.user-avatar, .user-avatar-small').attr('src', profilePicturePath);
            $('.user-dropdown img').attr('src', profilePicturePath);
        }
    </script>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>

