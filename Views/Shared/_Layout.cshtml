@using Hms.WebApp.Extensions;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - HMS</title>

    <link href="~/css/responsive.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <!-- Your Theme CSS -->
    <link href="~/css/theme.css" rel="stylesheet" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Toaster -->
    <script src="~/lib/toaster/toastr.min.js"></script>
    <style>
        .user-dropdown {
            border: none;
            border-radius: 12px;
            padding: 0;
            margin-top: 8px;
        }

            .user-dropdown .dropdown-item {
                padding: 10px 20px;
                transition: all 0.2s ease;
                font-size: 14px;
            }

                .user-dropdown .dropdown-item:hover {
                    background-color: #f8f9fa;
                    padding-left: 24px;
                }

                .user-dropdown .dropdown-item i {
                    width: 20px;
                    font-size: 14px;
                }

            .user-dropdown .text-danger:hover {
                background-color: #fff5f5;
            }

        .user-profile-btn {
            display: flex;
            align-items: center;
            background: transparent;
            border: none;
            padding: 6px 12px;
            border-radius: 8px;
            transition: all 0.2s ease;
        }

            .user-profile-btn:hover {
                background-color: rgba(0, 0, 0, 0.05);
            }

        .user-avatar {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            object-fit: cover;
        }
    </style>
</head>

<body>
    <div class="layout-wrapper">
        <!-- SIDEBAR -->
        <aside class="sidebar" id="sidebar">
            <!-- Brand Logo -->
            <div class="sidebar-brand">
                <div class="brand-logo">
                    <i class="fas fa-hospital-user"></i>
                </div>
                <span class="brand-text">HMS</span>
            </div>

            <!-- Sidebar Menu -->
            <nav class="sidebar-nav">
                <ul class="nav-list">
                    @using Hms.WebApp.Constants
                    @using Hms.WebApp.Models.RolesPermissions
                    @{
                        var permissions = ViewBag.Permissions as PermissionsViewModel;
                    }

                    @* Dashboard *@
                    @* @if (permissions?.CanAccessDashboard == true)
                    { *@
                    <li class="nav-item">
                        <a href="/Dashboard/Index" class="nav-link" data-page="Dashboard" data-tooltip="Dashboard" 
                           style="display: flex; align-items: center; gap: 8px;">
                            <div class="nav-icon">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            <span class="nav-text">Dashboard</span>
                        </a>
                    </li>
                    @*                     }
 *@
                    @* Patients *@
                    <li class="nav-item">
                        <a href="/Patient/Index" class="nav-link" data-page="Patient"
                        style="display: flex; align-items: center; gap: 8px;">
                            <div class="nav-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <span class="nav-text">Patients</span>
                        </a>
                    </li>


                    @* Appointments *@
                    <li class="nav-item">
                        <a href="/Appointment/Index" class="nav-link" data-page="Appointment"
                           style="display: flex; align-items: center; gap: 8px;">
                            <div class="nav-icon">
                                <i class="fas fa-calendar-check"></i>
                            </div>
                            <span class="nav-text">Appointments</span>
                        </a>
                    </li>

                    @* Doctors *@
                    <li class="nav-item">
                        <a href="/Doctor/Index" class="nav-link" data-page="Doctor"
                           style="display: flex; align-items: center; gap: 8px;">
                            <div class="nav-icon">
                                <i class="fas fa-user-md"></i>
                            </div>
                            <span class="nav-text">Doctors</span>
                        </a>
                    </li>

                    @* Nurse*@
                    <li class="nav-item">
                        <a href="/Nurse/Index" class="nav-link" data-page="Nurse" style="display: flex; align-items: center; gap: 8px;">
                            <div class="nav-icon">
                                <i class="fas fa-user-nurse"></i>
                            </div>
                            <span class="nav-text">Nurses</span>
                        </a>
                    </li>

                    @* Departments *@
                    <li class="nav-item">
                        <a href="/Department/Index" class="nav-link" data-page="Department"
                           style="display: flex; align-items: center; gap: 8px;">
                            <div class="nav-icon">
                                <i class="fas fa-building"></i>
                            </div>
                            <span class="nav-text">Departments</span>
                        </a>
                    </li>

                    @* Reports *@
                    <li class="nav-item">
                        <a href="/Report/Index" class="nav-link" data-page="Report"
                           style="display: flex; align-items: center; gap: 8px;">
                            <div class="nav-icon">
                                <i class="fas fa-file-medical"></i>
                            </div>
                            <span class="nav-text">Reports</span>
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Sidebar Footer -->
            <div class="sidebar-footer">
                <div class="user-info-compact">
                    <img src=""
                         alt="User" class="user-avatar-small" />
                    <div class="user-details-small">
                        <span class="user-name-small">userName</span>
                        <span class="user-role-small">Administrator</span>
                    </div>
                </div>
            </div>
        </aside>

        <!-- MAIN CONTENT -->
        <div class="main-content" id="mainContent">
            <!-- TOP HEADER -->
            <header class="top-header">
                <div class="header-left">
                    <button class="sidebar-toggle" id="sidebarToggle">
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="page-title">
                        <h5 class="mb-0">@ViewData["Title"]</h5>
                    </div>
                </div>

                <div class="header-item dropdown">
                    <button class="user-profile-btn" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src=""
                             alt="User" class="user-avatar" />
                        <div class="user-info d-none d-md-block">
                            <span class="user-name">userName</span>
                            <span class="user-role">Administrator</span>
                        </div>
                        <i class="fas fa-chevron-down ms-2"></i>
                    </button>

                    <ul class="dropdown-menu dropdown-menu-end user-dropdown shadow-lg" style="min-width: 280px;">
                        <!-- User Info Header -->
                        <li class="px-3 py-3 border-bottom bg-light">
                            <div class="d-flex align-items-center">
                                <img src=""
                                     alt="User" class="rounded-circle me-3"
                                     style="width: 50px; height: 50px; border: 2px solid #e9ecef;" />
                                <div class="flex-grow-1">
                                    <h6 class="mb-0 fw-bold text-dark">userName</h6>
                                    <small class="text-muted d-block">Administrator</small>
                                    <span class="badge bg-success mt-1" style="font-size: 10px;">
                                        <i class="fas fa-circle me-1" style="font-size: 6px;"></i>Active
                                    </span>
                                </div>
                            </div>
                        </li>

                        <!-- Menu Options -->
                        <li class="mt-2">
                            <a class="dropdown-item py-2" href="/Account/Profile">
                                <i class="fas fa-user-circle me-2 text-primary"></i>
                                <span>My Profile</span>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item py-2" href="/Account/EditProfile">
                                <i class="fas fa-user-edit me-2 text-info"></i>
                                <span>Edit Profile</span>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item py-2" href="/Account/Settings">
                                <i class="fas fa-cog me-2 text-secondary"></i>
                                <span>Settings</span>
                            </a>
                        </li>

                        <li><hr class="dropdown-divider my-2"></li>

                        <li class="mb-2">
                            <a class="dropdown-item py-2 text-danger" href="/Account/Logout">
                                <i class="fas fa-sign-out-alt me-2"></i>
                                <span>Logout</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </header>

            <!-- PAGE CONTENT -->
            <div class="page-content">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Overlay for mobile -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Scripts -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function,(){
            InitializeUserProfile();
        });

        // Sidebar Toggle
        const sidebarToggle = document.getElementById('sidebarToggle');
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('mainContent');
        const sidebarOverlay = document.getElementById('sidebarOverlay');

        sidebarToggle.addEventListener('click', function() {
            sidebar.classList.toggle('collapsed');
            mainContent.classList.toggle('expanded');

            // Mobile
            if (window.innerWidth <= 992) {
                sidebar.classList.toggle('show-mobile');
                sidebarOverlay.classList.toggle('show');
            }
        });

        sidebarOverlay.addEventListener('click', function() {
            sidebar.classList.remove('show-mobile');
            sidebarOverlay.classList.remove('show');
        });

        // Active Navigation
        const currentPath = window.location.pathname;
        const navLinks = document.querySelectorAll('.nav-link');

        navLinks.forEach(link => {
            if (currentPath.includes(link.getAttribute('data-page'))) {
                link.classList.add('active');
            }
        });

        // Handle window resize
        window.addEventListener('resize', function() {
            if (window.innerWidth > 992) {
                sidebar.classList.remove('show-mobile');
                sidebarOverlay.classList.remove('show');
            }
        });


        function LoadUserProfileFromCache() {
             let userName = localStorage.getItem("cachedUserName");
             let centerName = localStorage.getItem("cachedCenterName");
             let roleName = localStorage.getItem("cachedRoleName");
             let profilePicturePath = localStorage.getItem("cachedProfilePicturePath");
             let workforceCenterId = localStorage.getItem("cachedWorkforceCenterId");
             let roleCode = localStorage.getItem("cachedRoleCode");

             if (userName && centerName && roleName) {
                 $("#userName").html(userName);
                 if (centerName != null) {
                    $(".centerName").show();
                    $("#centerName").html(centerName);
                 } else {
                     $(".centerName").hide();
                 }
                 $("#roleName").html(roleName);

                 if (profilePicturePath) {
                     $("#profileImg").attr("src", profilePicturePath);
                 } else {
                     $("#profileImg").css('background-image', 'url(../assets/img/user/user.jpg)');
                 }
                 return true;
             }
             return false;
         }


        function InitializeUserProfile() {
             if (!LoadUserProfileFromCache()) {
                 LoadUserProfile();
             }
         }

         function ClearUserProfileCache() {
             localStorage.removeItem("cachedUserName");
             localStorage.removeItem("cachedCenterName");
             localStorage.removeItem("cachedRoleName");
             localStorage.removeItem("cachedProfilePicturePath");
             localStorage.removeItem("cachedWorkforceCenterId");
         }

        function LoadUserProfile(){
            $.ajax({
                 url: '/UserProfile/Index',
                 type: 'GET',
                 data: {
                     isFromLayout: true
                 },
                 cache: false,
                 async: false,
                 success: function (data) {
                     if (data) {
                         let userName = data.firstName + " " + data.lastName;
                         let profilePicturePath = data.profilePicturePath;
                         let roleName = data.roleName;
                         let roleCode = data.roleCode;
                         let roleId = data.roleId;
                         


                         localStorage.setItem("cachedUserName", userName);
                         localStorage.setItem("cachedRoleName", roleName);
                         localStorage.setItem("cachedRoleCode", roleCode);
                         localStorage.setItem("cachedRoleId", roleId);
                         localStorage.setItem("cachedProfilePicturePath", profilePicturePath);
        }

    </script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>

    <!-- Bootstrap 5 JS Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>